         <pos>0.02 0.96</pos>      
         <textColor>ffd800</textColor>
         <iconColor>ffd800</iconColor>
      </helpsystem>
   </view>    
   
<!--
System Gamelist
--> 

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <zIndex>43</zIndex>	      
	     <selectorColor>1c1c1c00</selectorColor>
	     <selectedColor>0d46c1</selectedColor>   
         <pos>0.043 0.329</pos>
         <size>0.415 0.58</size>
         <primaryColor>575757</primaryColor>
         <secondaryColor>575757</secondaryColor>
