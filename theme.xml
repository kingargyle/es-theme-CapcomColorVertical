<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>43</zIndex>	      
        <type>vertical</type>
        <pos>-0.277 0.0</pos>
        <size>1 1</size>
        <logoScale>1.3</logoScale>
        <logoSize>0.28 0.24</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
		<logoAlignment>center</logoAlignment>        
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0.22 0.47</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>0d46c1</color>
         <fontPath>./_inc/fonts/Bangers.ttf</fontPath>
	     <fontSize>0.03</fontSize>
         <zIndex>7</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Bangers.ttf</fontPath>
         <fontSize>0.015</fontSize>     
         <pos>0.476 0.96</pos>      
         <textColor>ffd800</textColor>
         <iconColor>ffd800</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
